            <column name="bonus_attaque_distance" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="force" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="dexterite" type="integer">
                <constraints nullable="false" />
            </column>
            <column name="constitution" type="integer">
                <constraints nullable="false" />
